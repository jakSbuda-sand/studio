
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "types": ["mocha", "chai", "sinon"]
  },
  "compileOnSave": true,
  "include": [
    "index.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
