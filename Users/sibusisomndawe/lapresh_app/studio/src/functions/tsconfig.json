
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "lib", // Output relative to this tsconfig.json, so src/functions/lib
    "rootDir": ".",  // Root for *this* config's files is src/functions/
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": ["es2022"]
  },
  "include": [
    "index.ts",       // This is src/functions/index.ts
    "../lib/types.ts" // Explicitly include shared types, relative to src/functions/
  ],
  "exclude": [
    "node_modules",
    "lib"             // Exclude the output directory src/functions/lib
  ],
  "compileOnSave": true
}
