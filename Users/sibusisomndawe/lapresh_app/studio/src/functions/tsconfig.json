
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "outDir": "lib",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": [
    "index.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compileOnSave": true
}
