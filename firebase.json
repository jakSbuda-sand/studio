
{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": [
    {
      "source": "src/functions",
      "runtime": "nodejs18",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.map"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install",
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/genkit/**",
        "function": {
          "region": "us-west1",
          "functionId": "genkitNextServer",
          "pinTag": true
        }
      },
      {
        "source": "**",
        "function": {
          "region": "us-west1",
          "functionId": "nextServer",
          "pinTag": true
        }
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 9002
    },
    "ui": {
      "enabled": true
    }
  }
}
