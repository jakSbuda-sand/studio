
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "functions/lib",
    "rootDir": "..",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": ["es2022"]
  },
  "include": [
    "functions/index.ts",
    "lib/types.ts"
  ],
  "exclude": [
    "node_modules",
    "functions/lib"
  ],
  "compileOnSave": true
}
