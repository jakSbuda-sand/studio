
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "rootDir": "..",            // Actual project root for TS is src/
    "baseUrl": "..",            // Base for non-relative module imports is src/
    "outDir": "functions/lib",  // Output to src/functions/lib (relative to rootDir)
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": ["es2022"]
  },
  "include": [
    "index.ts",             // Relative to this tsconfig.json: src/functions/index.ts
    "../lib/types.ts"       // Relative to this tsconfig.json: src/lib/types.ts
  ],
  "exclude": [
    "lib",                  // Relative to this tsconfig.json: src/functions/lib
    "node_modules"
  ],
  "compileOnSave": true
}
