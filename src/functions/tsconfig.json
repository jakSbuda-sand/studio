
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": ["es2022"],
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../lib/*"]
    }
  },
  "include": [
    "index.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ],
  "compileOnSave": true
}
